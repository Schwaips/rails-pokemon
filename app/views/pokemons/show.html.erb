

<div class="row py-4">
  <div class="col-4 ">
    <p>You hear a rustle in the tall grass....a WILD pokemon appears!</p>
    <%= cl_image_tag @pokemon.photo.key, class:"img-fluid w-100 border border-warning rounded" %>
    <div class="d-flex flex-column align-items-center gap-2 py-3 bg-primary-subtle">
      <p><%= @pokemon.name %></p>
      <p><%= @pokemon.element_type %></p>
    </div>
  </div>
  <div class="col-8">
    <h2>Do you dare to catch this pokemon ? </h2>
    <%= simple_form_for @pokeball do |f| %>
      <%= f.input :trainer, collection: @trainers %>
      <%= f.input :pokemon, as: :hidden, input_html: { value: @pokemon.id } %>
      <%= f.input :location %>
      <%= f.input :caught_on, as: :date, html5: true %>
      <%= f.submit "Catch !", class:"btn btn-secondary btn-sm"%>
    <% end %>
  </div>
</div>